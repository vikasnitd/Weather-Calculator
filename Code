    <script>
      function getweather()
      {
        var var1="";
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function()
        {
          if (this.readyState == 4 && this.status == 200)
          {
            var1 = JSON.parse(this.responseText);
            document.getElementById('input1').value = Number(var1.main.temp)-273;
            document.getElementById('input2').value = Number(var1.main.temp_min)-273;
            document.getElementById('input3').value = Number(var1.main.temp_max)-273;
            document.getElementById('input4').value = var1.main.humidity;
            document.getElementById('input5').value = var1.wind.speed;
          }
        };
        var s=document.getElementById('input').value;
        xhttp.open("GET", "http://api.openweathermap.org/data/2.5/weather?q="+s+"&APPID=f17c87b5b634415c60e46cc06f4e485b", true);
        xhttp.send();
      }
    </script>
